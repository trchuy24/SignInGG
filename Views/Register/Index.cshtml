@model Sign_inWithGGAcc.Models.InternalUserModel.InternalUser
@{
    Layout = "_LayoutLogin";
}

<br />
<h1>Register Form</h1>
<br />
<form asp-action="AddUser">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label>Family Name: </label> <input type="text" class="form-control" asp-for="FamilyName" />
            </div>
            <div class="col-md-3">
                <label>Given Name:</label> <input type="text" class="form-control" asp-for ="GivenName" />
            </div>
            <label>Email:</label><input type="email" class="form-control" asp-for="Email" />
            <label>Password:</label><input type="password" class="form-control" asp-for="Password" />
            <label>Repeat Password:</label><input type="password" class="form-control"  />
            <br />
            <button type="submit" class="w-100 btn btn-primary btn-lg">Register</button>
        </div>
    </div>
</form>